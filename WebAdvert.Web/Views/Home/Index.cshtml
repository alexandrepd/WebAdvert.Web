@model List<WebAdvert.Api.Models.AdvertModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">



    @if (Model == null)
    {
            <h1 class="display-4">Welcome</h1>
            <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    }
    else
    {
            <table class="table">
            <thead>
            <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>ID</th>
            <th></th>
            <th></th>
            </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Id</td>
                <td><a role="button" type="button" class="btn btn-info" asp-route-id="@item.Id" asp-controller="AdvertManagement" asp-action="Edit">Editar</a></td>
                <td><a role="button"  class="btn btn-danger" asp-route-id="@item.Id" asp-controller="AdvertManagement" asp-action="Delete" onclick="return confirm('Are sure wants to delete?');">Excluir</a></td>
                </tr>
            }
            </table>
    }
</div>
