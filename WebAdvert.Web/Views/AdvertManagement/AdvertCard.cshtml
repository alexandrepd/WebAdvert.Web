@model WebAdvert.Web.Models.AdvertManagement.AdvertCardModel;
@using Microsoft.Extensions.Configuration;
@inject IConfiguration configuration

@{
    var advertImageUrl = configuration.GetValue<string>("ImageBaseUrl");

    var defaultImageUrl = configuration.GetValue<string>("ImageDefault");
    var imageUrl = string.IsNullOrEmpty(Model.Image) ? defaultImageUrl :
        $"{advertImageUrl}/{Model.Image}";

}
<div class="col-md-4 col-xs-6 col-sm-6 d-flex align-items-stretch">  
    <div class="card">
      <h5 class="card-header">@Model.Title</h5>
        <div class="row">
            <div class="col-sm-4">
            <img src="@imageUrl" alt="Avatar"  style="width:100%">
            </div>
            <div class="col-sm-8">
                <p class="card-text">@Model.Description</p>
            </div>
        </div>
    </div>
 </div>