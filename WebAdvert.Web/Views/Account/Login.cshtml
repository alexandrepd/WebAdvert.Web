@model WebAdvert.Web.Models.Account.LoginModel

    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="text-center">
                <h4>Login</h4>
            </div>
            <form method="post" asp-controller="Account" asp-action="Login">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-outline mb-2">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-outline mb-2">
                    <label asp-for="Password"></label>
                    <input asp-for="Password"  class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>


                <div class="form-outline mb-2">
                  <div class="row justify-content-between">
                        <div class="col-md-5">
                                <input asp-for="RememberMe"  />
                        @Html.DisplayName("Remember Me")
                        </div>

                        <div class="col-md-5">
                            <a asp-controller="Account" asp-action="ForgetPassword">Forget Password?</a>
                        </div>
                  </div>
                </div>

                <div class="form-outline mb-2">
                    <button class="btn btn-primary btn-block mb-4" type="submit">Login</button>
                </div>

                <div class="form-outline mb-2">
                  <div class="text-center">
                    <p><a asp-controller="Account" asp-action="Signup">Not a member?</a></p>
                  </div>
                 </div>
            </form>
        </div>
    </div>