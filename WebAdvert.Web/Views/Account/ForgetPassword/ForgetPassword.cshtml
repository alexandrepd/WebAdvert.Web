@model WebAdvert.Web.Models.Account.ForgetPassword.ForgetPasswordModel;

@{
    ViewData["title"] = "Forget password";
}

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="ForgetPassword">
            <h4>Please, confirm your email.</h4>
            <hr/>
            <div asp-validation-summary="All" class="text-danger">
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <hr />

            <button type="submit" class="btn-default">Send confirmation code</button>

        </form>
    </div>
</div>